

<div class="patient_search">
<% form_tag(patients_path, :method => "get") do %>
  <h1>Search for a patient</h1>
  <%= text_field_tag(:search, nil, :class=>'input') %>
  <%= submit_tag("Search", :class=>'button') %>
<% end %>
<p>Enter your search terms above to search for a patient. </p>	
</div>
	
<div class="patient_listing">	
<h1>Listing patients</h1>

<table>
  <tr>
    <th>Last name</th>
    <th>First name</th>
    <th>Age</th>
  </tr>

<% @patients.each do |patient| %>
  <tr>
    <td><%=h patient.last_name %></td>
    <td><%=h patient.first_name %></td>
    <td><%=h patient.age %></td>
    <td><%= link_to 'Show', patient %></td>
    <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
    <td><%= link_to 'Destroy', patient, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New patient', new_patient_path %>
</div>