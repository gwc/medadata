<div class="patient_encounter_listing">

<div class="page_header">
	<div class="page_header_links">
		<%= link_to 'New patient encounter', new_patient_encounter_path %> |
		<%= link_to 'New patient', new_patient_path %>
	</div>
	<div class="page_header_title">
	<h1>Patients Encounters</h1>
	</div>
</div>

<div ="patient_encounter">
	<div class="patient_encounter_table">
<table>
  <tr>
    <th>Start Date</th>
    <th>Patient</th>
    <th>Provider</th>
	<th>Institution</th>
	<th>Notes</th>
	<th>Encounter Type</th>
	<th>Encounter Reason</th>
  </tr>

<% @patient_encounters.each do |patient_encounter| %>
  <tr>
    <td><%=h patient_encounter.start_date %></td>
    <td><%=h patient_encounter.patient.last_name %></td>
    <td><%=h patient_encounter.provider.last_name %></td>
	<td><%=h patient_encounter.institution.name %></td>
	<td><%=h patient_encounter.notes %></td>
	<td><%=h patient_encounter.encounter_type.description %></td>
	<td><%=h patient_encounter.encounter_reason.description %></td>

    <td><%= link_to 'Show', patient_encounter %></td>
    <td><%= link_to 'Edit', edit_patient_encounter_path(patient_encounter) %></td>
    <td><%= link_to 'Destroy', patient_encounter, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
</div>
<br />
</div>

</div>